{
  "_comments":"Configure this for ThreadGroups, Note: Scenarios are acts like TreadGroup here. Please use 'only-once','transaction','critical-section' Key words for cotrollers",
  "payloadFile":"payload/Ctaf-21.postman_collection.json",
  "scenario":[{
    "name": "Scenario1",
    "tps":1,
    "duration":1,
    "rampUp":0,
    "csv_variable": [
      {
        "var_name": "userName",
        "var_constant":null,
        "dynamic_type":"String",
        "min_len": 3,
        "max_len": 5,
        "Apis": [{
          "apiName": "create-user",
          "attribute": "userName"
        }]
      },
      {
        "var_name": "userName",
        "var_constant":"N",
        "dynamic_type":"String",
        "min_len": 3,
        "max_len": 5,
        "Apis": [{
          "apiName": "update-user",
          "attribute": "userName"
        }]
      },
      {
        "var_name": "userId",
        "var_constant": null,
        "dynamic_type":"Number",
        "min_len": 4,
        "max_len": 4,
        "Apis": [{
          "apiName": "update-user",
          "attribute": "userId"
        }]
      }
    ],
    "controller": [
      {
      "name":"only-once",
      "apiName":["signin"]
    }],
    "JsonExtractor": [{
      "variable":"Access_token",
      "jsonPath": "$.{token}",
      "api_name": "signin",
      "target_apis": ["create-user","update-user","delete-user"],
      "target_type": "header",
      "target_value": "Authorization"
    },
      {
        "variable":"Test",
        "jsonPath": "$.{Test}",
        "api_name": "create-user",
        "target_apis": ["update-user","delete-user"],
        "target_type": "header",
        "target_value": "Authorization"
      }],
      "api_order": ["create-user","update-user","delete-user"]
    }
  ]
}