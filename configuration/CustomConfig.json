    "csv_variable": [
      {
        "var_name": "MSISIDN",
        "var_constant":"NUM",
        "dynamic_type":"Number",
        "min_len": 9,
        "max_len": 9,
        "apis": [{
          "apiName": "CreateMsisdn",
          "attribute": "msisdn"
        }]
      },
      {
        "var_name": "IMEI",
        "var_constant":"NUM",
