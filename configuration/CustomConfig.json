  "scenario":[{
    "name": "MSISDN_operations",
    "_comments": "normal - for normal thread Group, concurrent - for concurrent threadgroup, ultimate - for Ultimate Thread Group",
    "tps":10,
    "thread":{
      "thread_name": "ultimate",
      "property": [{
        "No of vu": 20,
        "initial_delay": 10,
        "rampup_time": 10,
        "duration": 60,
        "rampdown_time": 10,
        "step": 2,
        "loop": null
