{
  "_comments":"create this for Scenarios",
  "payloadFile":"payload/Ctaf-21.postman_collection.json",
  "scenario":[{
    "name": "Ctaf-userManagement",
    "_comments": "normal - for normal thread Group, concurrent - for concurrent threadgroup, ultimate - for Ultimate Thread Group",
    "tps":5,
    "averageResponseTime": 10,
    "thread":{
      "thread_name": "normal",
      "property": [{
        "userCount": 0,
        "initial_delay": 0,
        "rampUp": 10,
        "duration": 60,
        "rampDown": 0,
        "step": 0,
        "loop": null
      }]
    },
    "_comment_step": "If you are using concurrent add 'step': 'your value' next line otherwise it will take default value as 3",
    "csv_variable": [
      {
        "var_name": "username",
        "var_constant":null,
        "dynamic_type":"String",
        "min_len": 9,
        "max_len": 9,
        "apis": [{
          "apiName": "create-user",
          "attribute": "firstName"
        }]
      },
      {
        "var_name": "lastName",
        "var_constant":null,
        "dynamic_type":"String",
        "min_len": 7,
        "max_len": 10,
        "apis": [
          {
            "apiName": "update-user",
            "attribute": "lastName"
          }]
      }],
    "component_order": ["signin","userOperations","logout"],
    "controller": [{
      "_comments": "only-once for only Once Controller, transaction - Transaction Controller, critical-section - Critical Section Controller",
      "name":"userOperations",
      "controller-type": "critical-section",
      "apiName":["create-user","update-user","delete-user"],
      " runTime/loop/throughput": 0
    }],
    "thinkTime": {
      "duration": 1000,
      "apiName":[]
    },
    "debug": {
      "apiName":[]
    },
    "processors": [{
      "processor_name": "jsonExtractor",
      "proc_variableName": "access_token",
      "path":"$.token",
      "field_to_check": "",
      "apiName":"signin",
      "targets":[{
        "apiName":"create-user",
        "target_type":"header",
        "target_value": "Authorization"
      },{
        "apiName":"update-user",
        "target_type":"header",
        "target_value": "Authorization"
      },{
        "apiName":"delete-user",
        "target_type":"header",
        "target_value": "Authorization"
      },{
        "apiName":"logout",
        "target_type":"header",
        "target_value": "Authorization"
      }]
    },{
      "processor_name": "jsonExtractor",
      "proc_variableName": "userid",
      "path":"$.data.userId",
      "field_to_check": "",
      "apiName":"create-user",
      "targets":[{
        "apiName":"update-user",
        "target_type":"body",
        "target_value": "userId"
      },{
        "apiName":"delete-user",
        "target_type":"path",
        "target_value": ""
      }]
    }],
    "timers": [{
      "timer_name":"constant",
      "delay/throughput":"100",
      "throughput_base/groups": "",
      "apiName":["signin"]
    }],
    "assertions": [{
      "assert_name": "response",
      "field_to_test": "",
      "duration/value": "",
      "comparison_type": "",
      "jsonPath": "",
      "apiName":["signin","create-user","update-user","delete-user","logout"]
    }]
  }]
}